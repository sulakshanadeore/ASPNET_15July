@model IEnumerable<FirstMVCApp.Models.ElectronicsProducts>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<table class="table table-hover" style="background-color:springgreen">
    <tr>
        <td>Product ID</td>
        <td>Product Name </td>
        <td>Product Price</td>
        <td>Operations </td>
    </tr>

    
    @foreach (var item in Model)
    {
<tr>
    <td>@item.ProdId</td>
    <td>@item.ProdName</td>
    <td>@item.Price</td>
    <td>
        @Html.ActionLink("Delete", "RemoveProduct",
  new { id = item.ProdId }) |
</td>
<td>
    @Html.ActionLink("Find", "FindProduct",
          new { id = item.ProdId }) |
</td>
<td>
    @Html.ActionLink("Update", "UpdateProduct",
          new { id = item.ProdId }) |
</td>
</tr>
    }

</table>
<hr/>
@*<a></a>*@
@Html.ActionLink("Click here to add  more products","AddProduct")